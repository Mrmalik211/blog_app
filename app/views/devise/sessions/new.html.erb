
<!-- Section: Design Block -->
<section class="text-center">
  <!-- Background image -->
  <div class="p-5 bg-image" style="
        background-image: url('https://mdbootstrap.com/img/new/textures/full/171.jpg');
        height: 300px;
        "></div>
  <!-- Background image -->

  <div class="card mx-4 mx-md-5 shadow-5-strong" style="
        margin-top: -100px;
        background: hsla(0, 0%, 100%, 0.8);
        backdrop-filter: blur(30px);
        ">
    <div class="card-body py-5 px-md-5">

      <div class="row d-flex justify-content-center">
        <div class="col-lg-8">
          <h2 class="fw-bold mb-5">Sign In</h2>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <form>

            <div class="form-outline fw-bold mb-5">
              <label class="form-label" for="form3Example3">The World of Blogs!</label>
            </div>

            <!-- Email input -->

            <div class="form-outline mb-4">
              <label class="form-label" for="form3Example3">Email address</label>
              <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class: "form-control", id: "form3Example3"%>
            </div>

            <!-- Password input -->

            <div class="form-outline mb-4">
              <label class="form-label" for="form3Example4">Password</label>
              <%= f.password_field :password, autocomplete: "current-password" ,id: "form3Example4" ,class: "form-control"%>
            </div>

            <!-- Checkbox -->

            <% if devise_mapping.rememberable? %>
              <div class="form-check d-flex justify-content-center mb-4">
                <%= f.check_box :remember_me, class:"form-check-input me-2", id:"form2Example33"%>
                <label class="form-check-label" for="form2Example33">Remember Me</label>
              </div>
            <% end %>

            <!-- Submit button -->

            <div class="actions">
              <%= f.submit "Log in" ,class:"btn btn-primary btn-block mb-4"%>
            </div>

            </div>
          </form>
          <%end%>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- Section: Design Block -->
<%= render "devise/shared/links" %>
