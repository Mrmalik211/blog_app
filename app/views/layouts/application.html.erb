<!DOCTYPE html>
<html>
  <head>
    <title>BlogApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <%= link_to "Blog Application", root_path, class:"navbar-brand" %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">

        <li class='nav-item'>
          <%= link_to 'Add a Blog', new_post_path, class: 'btn btn-outline-primary' %>
        </li>

        <li class="nav-item" style="padding-left: 750px;">
          <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true"><%= current_user.email if user_signed_in? %></a>
        </li>

        <% unless user_signed_in? %>
          <li class="nav-item " style="padding-left: 100px;">
            <%= link_to "Sign In", new_user_session_path, class: "btn btn-outline-primary " %>
          </li>

          <li class="nav-item">
            <%= link_to "Sign Up", new_user_registration_path , class: "btn btn-outline-primary" %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Edit Profile", edit_user_registration_path, class: "btn btn-outline-primary" %>
          </li>

          <li class="nav-item">
            <%= link_to "Sign Out", destroy_user_session_path, class: "btn btn-outline-primary" %>
          </li>
        <% end %>

      </ul>

    </div>
  </div>
</nav>


    <%= yield %>
  </body>
</html>
