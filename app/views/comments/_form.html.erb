<%= form_with model: [ post, comment ] do |form| %>
  <p>
    <%= form.label :content %><br>
    <%= form.text_area :content %>
    <% comment.errors.full_messages_for(:content).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </p>
  <p>
    <%= form.submit 'Submit', class: 'btn btn-primary' %>
  </p>
<% end %>
